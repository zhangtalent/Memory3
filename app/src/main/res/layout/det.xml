<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/card"
        app:cardCornerRadius="1dp"
        app:contentPaddingTop="1dp"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <z.talent.memory.ImageViewPlus
                android:layout_marginLeft="10dp"
android:scaleType="centerCrop"
                android:id="@+id/iv"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:textColor="#c80b2e3e"
                android:textSize="21sp"
                android:id="@+id/user"
                android:layout_marginLeft="13dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            </LinearLayout>
<TextView
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textSize="21sp"
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <z.talent.memory.mgv
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <Button
                android:layout_gravity="right"
                android:id="@+id/zan"
                android:background="@drawable/foa"
                android:layout_width="25dp"
                android:layout_height="25dp" />
                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/zannumber"
                    android:textSize="16sp"
                    android:textColor="#ecb1b0b0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_gravity="right"
                    android:id="@+id/pinglun"
                    android:background="@drawable/pinglunbt"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <Button
                    android:layout_gravity="right"
                    android:id="@+id/share"
                    android:background="@drawable/sharebt"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                    </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>